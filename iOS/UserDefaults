    /* ì²˜ë¦¬ë°©ë²• */
    // 1. Codable í”„ë¡œí† ì½œ ì±„íƒ
    struct Human: Codable {
        let name: String
    }
    // 2. Dataí˜• ë³€ê²½í›„ setí˜¸ì¶œ
    let encoder: JSONEncoder = JSONEncoder()
